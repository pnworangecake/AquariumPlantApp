<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="pnworangecake.plant_app.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="169dp"
            android:layout_height="165dp"
            android:text="Plants (A-Z)"
            android:id="@+id/pnameaz"
            android:layout_row="0"
            android:layout_column="6"
            android:clickable="true"
            android:onClick="buttonOnClick"
            />

        <Button
            android:layout_width="169dp"
            android:layout_height="165dp"
            android:text="Plant types (stem, rhizome, etc.)"
            android:id="@+id/Ptype"
            android:layout_row="0"
            android:layout_column="7"
            android:clickable="true" />

        <Button
            android:layout_width="169dp"
            android:layout_height="165dp"
            android:text="Plants by position (Foreground, midground, etc.)"
            android:id="@+id/Pplacement"
            android:layout_row="1"
            android:layout_column="6"
            android:clickable="true" />

        <Button
            android:layout_width="169dp"
            android:layout_height="165dp"
            android:text="Random Plant"
            android:id="@+id/Prandom"
            android:layout_row="1"
            android:layout_column="7"
            android:clickable="true" />

    </GridLayout>
</RelativeLayout>
